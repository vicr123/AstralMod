{
    // Use IntelliSense to learn about possible Node.js debug attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch",
            "program": "${workspaceFolder}/bot.js",
            "console": "integratedTerminal",
            "args": [
                "--blueprint",
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch without Blueprint",
            "program": "${workspaceFolder}/bot.js",
            "console": "integratedTerminal",
            "args": []
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch with debug logs",
            "program": "${workspaceFolder}/bot.js",
            "console": "integratedTerminal",
            "args": [
                "--debug",
                "--blueprint"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch with HTTP server",
            "program": "${workspaceFolder}/bot.js",
            "console": "integratedTerminal",
            "args": [
                "--debug",
                "--blueprint",
                "--httpserver"
            ]
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Port",
            "address": "localhost",
            "port": 23364
        }
    ]
}